@using NLP.ViewModels;
@model AudioFileVM

@{
    ViewBag.Title = "إضافة";
}

<div class="content">
    @using (Html.BeginForm("UploadAudio", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", id = "form1" }))
    {
        <div class="card card-primary">
            <div class="card-header with-border">
                <h3 class="card-title"><strong></strong> @ViewBag.Title</h3>
            </div><!-- /.card-header -->
            <div class="card-body">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger text-white alert-dismissible font-sm", Style = "font-size:12px;" })
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-info"></i> Status</h4>
                        @ViewBag.Message
                    </div>
                }
                <div class="form-group row">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.ForType, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.ForType, new SelectList(ViewBag.AudioForTypes, "Id", "Name"), "اختر من فضلك ..", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ForType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-md-6">
                        <label class="control-label" for="file">الملف</label>
                        <div class="btn btn-default btn-file text-center">
                            <input type="file" name="file" id="file" />
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                    <label class="control-label col-md-4 text-success" id="clLabel" for="file"></label>
                </div>
            </div><!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-success pull-right">حفظ</button>
            </div>
        </div>
    }
</div><!-- /.content -->